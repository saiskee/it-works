{
  "name": "login-demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {

    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4"
  },
  "scripts": {
    "preinstall": "echo --PREINSTALL-- && yarn && cd server && yarn && cd ../client && yarn && echo ---BUILDING--- && yarn run build && cd ../",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "cd server && nodemon start.js",
    "client": "cd client && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
